<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/epamWhite"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".Activity.DedicatedUserHome">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/epamCoral"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Dedicated Slot Details"
                android:textColor="@color/epamWhite"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/dedEmpIDTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/epamBrightBlue"
                    android:gravity="center"
                    android:text="E1"
                    android:textColor="@color/epamWhite"
                    android:textSize="70dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/empRatingTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="3"
                        android:textColor="@color/epamBrightBlue"
                        android:textSize="70dp" />

                    <ImageView
                        android:layout_width="125dp"
                        android:layout_height="150dp"
                        android:src="@android:drawable/btn_star_big_on" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/epamWhite"
        android:orientation="vertical">

        <TextView
            android:id="@+id/failedInstanceMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have 5 voilation \nThe next voilation will cost 5 days to gain a star"
            android:textColor="@color/epamGraphite"
            android:textSize="15dp"
            android:visibility="gone"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Login Time: "
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/loginTimeTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="10:00:00 AM"
                    android:textColor="@color/epamGreen"
                    android:textSize="25dp" />

                <ImageButton
                    android:id="@+id/editLoginButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/epamGreen"
                    android:src="@android:drawable/ic_menu_edit" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Logout Time: "
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/logoutTimeTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="06:00:00 PM"
                    android:textColor="@color/epamCoral"
                    android:textSize="25dp" />

                <ImageButton
                    android:id="@+id/editLogoutButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/epamGreen"
                    android:src="@android:drawable/ic_menu_edit" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/updateButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:weightSum="2">

                <Button
                    android:id="@+id/updateChanges"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@color/epamGreen"
                    android:text="Update Changes" />

                <Button
                    android:id="@+id/cancelChanges"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@color/epamCoral"
                    android:text="Cancel" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <Button
                    android:id="@+id/lateButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@color/epamSharpBlue"
                    android:gravity="center"
                    android:text="I'll Be Late!"
                    android:textColor="@color/epamWhite" />

                <Button
                    android:id="@+id/dayCanceled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@color/epamDarkBlue"
                    android:gravity="center"
                    android:text="I'm Not comming today"
                    android:textColor="@color/epamWhite" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>



